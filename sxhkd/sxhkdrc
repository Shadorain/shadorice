# --- System --- # {{{
# Restart / Shutdown
super + shift + {r,t}
    onedrive 
	~/.config/scripts/prompt {"Confirm Reboot?" "reboot", "Confirm shutdown?" "shutdown -h now"}

# Lockscreen
super + p
	betterlockscreen -l blur -r 1920x1080  -b 0.2 -t "Welcome back, Shado..."

# -- Audio Config -- # {{{
XF86AudioLowerVolume
	pulsemixer --change-volume -2
XF86AudioRaiseVolume
	pulsemixer --change-volume +2
XF86AudioMute
	pulsemixer --toggle-mute
# }}}
# -- Brightness Config -- # {{{
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5
# }}}
# -- Music Controls -- # {{{
# Toggle Play/Pause
XF86AudioPlay
    mpc --host=127.0.0.1 --port=6601 toggle && dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
# Next Track
XF86AudioNext
    mpc --host=127.0.0.1 --port=6601 next && dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
# Previous Track
XF86AudioPrev
    mpc --host=127.0.0.1 --port=6601 prev && dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
# Stop Playing
ctrl + XF86AudioStop
    mpc --host=127.0.0.1 --port=6601 shuffle && notify-send "MPC" "Toggled Shuffle"
# Start MPD
super + alt + m
    kitty mpd
# Open Ncmpcpp 
super + shift + m
    kitty ncmpcpp
# }}}
# Set Display
@F7
    ~/.screenlayout/right.sh

# Compositor 
super + @F9
    killall picom

# Show / Hide Polybar {{{
super + ctrl + p
    /home/shadow/.config/scripts/pbar_hide.sh
super + alt + p
    /home/shadow/.config/scripts/pbar_show.sh
# }}}
#}}}
